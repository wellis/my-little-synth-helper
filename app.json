{
  "expo": {
    "name": "My Little Synth Helper",
    "slug": "my-little-synth-helper",
    "version": "1.0.0",
    "scheme": "synth-helper",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a1a"
    },
    "ios": {
      "supportsTablet": true,
      "requireFullScreen": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "Connect to Bluetooth MIDI devices",
        "UIRequiresFullScreen": true,
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ],
        "UISupportedInterfaceOrientations": [
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      },
      "bundleIdentifier": "com.synthhelper.app"
    },
    "plugins": [
      "expo-router"
    ],
    "android": {
      "package": "com.synthhelper.app"
    }
  }
}
